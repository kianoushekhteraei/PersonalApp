<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Frg_Store">

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/cl_toolbar_tabs"
        android:layout_width="match_parent"
        android:layout_height="@dimen/margin_50dp"
        app:layout_constraintTop_toTopOf="parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_orders"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toRightOf="@+id/cl_favourite"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_title_orders"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="سفارشات"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/font_18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_favourite"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@color/black"
            app:layout_constraintHorizontal_chainStyle="spread"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/cl_orders"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tv_title_favourite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="علاقه مندی ها"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="@dimen/font_18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/fl_all_store"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/gray_BFBFBF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cl_toolbar_tabs">

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>