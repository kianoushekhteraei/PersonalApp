<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Project.Act_Detail_Tabs"
    android:background="@color/black">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/iv_prd_detail_tabs"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:adjustViewBounds="true"
        android:layout_gravity="center"
        android:src="@drawable/tom_hardy"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHeight_percent="0.35"
        app:layout_constraintWidth_percent="0.95"
        app:riv_corner_radius="@dimen/margin_20dp"/>

    <TextView
        android:id="@+id/tv_name_prd_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="@dimen/font_24sp"
        android:textStyle="bold"
        android:text="شال"
        android:layout_marginTop="@dimen/margin_30dp"
        app:layout_constraintTop_toBottomOf="@id/iv_prd_detail_tabs"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <ImageView
        android:id="@+id/iv_whish_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_whish_white"
        app:layout_constraintTop_toTopOf="@id/tv_name_prd_detail"
        app:layout_constraintBottom_toBottomOf="@id/tv_name_prd_detail"
        app:layout_constraintLeft_toLeftOf="@id/iv_prd_detail_tabs"/>

    <TextView
        android:id="@+id/tv_description_detail"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="X:ckzx;kv;zxlkv;zlkv;zlv"
        android:textColor="@color/white"
        android:textSize="@dimen/font_22sp"
        android:layout_marginTop="@dimen/margin_15dp"
        android:layout_marginBottom="@dimen/margin_15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_name_prd_detail"
        app:layout_constraintBottom_toTopOf="@id/iv_off_detail"
        app:layout_constraintRight_toRightOf="@id/iv_prd_detail_tabs"
        app:layout_constraintLeft_toLeftOf="@id/iv_prd_detail_tabs"/>

    <ImageView
        android:id="@+id/iv_off_detail"
        android:layout_width="@dimen/margin_50dp"
        android:layout_height="@dimen/margin_50dp"
        android:background="@drawable/circle_green"
        android:layout_marginBottom="@dimen/margin_15dp"
        app:layout_constraintRight_toRightOf="@id/iv_prd_detail_tabs"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:id="@+id/tv_percent_off_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/margin_8dp"
        android:text="%"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/font_18sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_off_detail"
        app:layout_constraintRight_toRightOf="@id/iv_off_detail"
        app:layout_constraintTop_toTopOf="@id/iv_off_detail" />

    <TextView
        android:id="@+id/tv_off_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="25"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/font_18sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_off_detail"
        app:layout_constraintRight_toLeftOf="@id/tv_percent_off_detail"
        app:layout_constraintTop_toTopOf="@id/iv_off_detail" />



    <TextView
        android:id="@+id/tv_tooman_bprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تومان"
        android:textColor="@color/white"
        android:textSize="@dimen/font_20sp"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/margin_5dp"
        app:layout_constraintRight_toLeftOf="@id/tv_bprice_detail"
        app:layout_constraintTop_toTopOf="@id/iv_off_detail"
        app:layout_constraintBottom_toBottomOf="@id/iv_off_detail"/>

    <TextView
        android:id="@+id/tv_bprice_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="120000"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="@dimen/font_20sp"
        android:layout_marginRight="@dimen/margin_15dp"
        app:layout_constraintTop_toTopOf="@id/tv_tooman_bprice"
        app:layout_constraintRight_toLeftOf="@id/iv_off_detail"
        app:layout_constraintBottom_toBottomOf="@id/tv_tooman_bprice"/>

    <TextView
        android:id="@+id/tv_aprice_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="76dp"
        android:text="100000"
        android:textColor="@color/white"
        android:textSize="@dimen/font_20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@id/tv_tooman_bprice"
        app:layout_constraintRight_toLeftOf="@id/tv_tooman_bprice"
        app:layout_constraintTop_toTopOf="@id/tv_tooman_bprice"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/tv_tooman_aprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="تومان"
        android:textColor="@color/white"
        android:textSize="@dimen/font_20sp"
        android:textStyle="bold"
        android:layout_marginRight="@dimen/margin_5dp"
        app:layout_constraintRight_toLeftOf="@id/tv_aprice_detail"
        app:layout_constraintTop_toTopOf="@id/tv_aprice_detail"
        app:layout_constraintBottom_toBottomOf="@id/tv_aprice_detail"/>

    <View
        android:id="@+id/view"
        android:layout_width="0dp"
        android:layout_height="4dp"
        android:background="@color/green_4ac58e"
        app:layout_constraintBottom_toBottomOf="@id/tv_bprice_detail"
        app:layout_constraintLeft_toLeftOf="@id/tv_bprice_detail"
        app:layout_constraintRight_toRightOf="@id/tv_bprice_detail"
        app:layout_constraintTop_toTopOf="@id/tv_bprice_detail" />

</androidx.constraintlayout.widget.ConstraintLayout>